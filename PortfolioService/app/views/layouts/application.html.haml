!!!
%html
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1, shrink-to-fit=no", :name => "viewport"}/
    %title #{@page_title}
    = csrf_meta_tags
    %meta{content: @seo_keywords, name: "keywords"}/
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body.text-center
    .cover-container.d-flex.w-100.h-100.p-3.mx-auto.flex-column
      = video_tag('tree.mp4', id: 'background', autoplay: true, loop: true, muted: true, poster: 'home.jpg')
      -# #background
      = render 'shared/navbar_home'
      %p.notice= notice
      %p.alert= alert
      = yield
      = render 'shared/footer'
      = render 'shared/alerts'

