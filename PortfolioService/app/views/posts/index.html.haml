%p#notice
  = notice
%h1 Posts
= link_to 'New Post', new_post_path
%br
%table
  %thead
    %tr
      %th Title
      %th Body
      %th{ colspan: "4" }
  %tbody
    -@posts.each do |post|
      %tr
        %td
          = post.title
        %td
          = post.body
        %td
          = link_to(post.status, toggle_status_post_path(post))
        %td
          = link_to('Show', post)
        %td
          = link_to('Edit', edit_post_path(post))
        %td
          = link_to('Destroy', post, method: :delete, data: { confirm: 'Are you sure?' })
