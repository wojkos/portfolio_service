.col-sm-8.blog-main
  %h2
    = @post.title
  %p 
    = @post.topic.title
  = link_to 'Edit', edit_post_path(@post) if logged_in?(:site_admin)

  %p
    %strong Body:
    = markdown(@post.body) 

  = link_to('Back', posts_path)
  = render 'comments/form'
  %div#comments{ 'data-post-id': @post.id}
    = render @post.comments
 
            