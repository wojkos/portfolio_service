.col-sm-8.blog-main
  %h2
    = @post.title
  = link_to 'Edit', edit_post_path(@post) if logged_in?(:site_admin)

  %p
    %strong Body:
    = @post.body 

  = link_to('Back', posts_path)
  -# comment form
  = unless current_user.is_a? GuestUser
    =form_for @coment, url: '#' do |f|
      .form-group
        =f.label :content
        = f.text_area :content, class: 'form-control'
      = f.submit 'Post Comment', class: 'btn btn-primary'
  -# coments
  = render @post.comments
 
            