%tr
  %td
    = post.title
  %td
    = distance_of_time_in_words(post.created_at, Time.now) 
    ago
  %td
    = post.body
  %td
    = link_to(post.status, toggle_status_post_path(post))
  %td
    = link_to('Show', post)
  %td
    = link_to('Edit', edit_post_path(post))
  %td
    = link_to('Destroy', 
              post,
              method: :delete,
              data: { confirm: 'Are you sure?' })
