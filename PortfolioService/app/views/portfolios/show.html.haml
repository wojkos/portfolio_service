.container
  .row
    .col-md-7
      = image_tag portfolio_img(@portfolio_item.main_image, 'main'), class: 'img-fluid'
    .col-md-5
      %h1= @portfolio_item.title
      %hr/
      %em= @portfolio_item.subtitle
      %p= @portfolio_item.body
      %hr/
      %h3 Technologies Used:
      - @portfolio_item.technologies.each do |t|
        %p= t.name
      -if logged_in?(:site_admin)
        %div
          =link_to('Edit Item', edit_portfolio_path(@portfolio_item), class: 'btn btn-warning')
  =link_to('Back', portfolios_path)