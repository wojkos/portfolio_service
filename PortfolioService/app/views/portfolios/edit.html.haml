%h1 Edit portfolio item

= form_for(@portfolio_item) do |f|
  .field
    = f.label :title
    = f.text_field :title, id: :portfolio_title
  .field
    = f.label :subtitle
    = f.text_field :subtitle, id: :portfolio_subtitle
  .field
    = f.label :body
    = f.text_area :body, id: :post_body
  .field
    = f.label :main_image
    = f.text_field :main_image, id: :main_image
  .field
    = f.label :thumb_image
    = f.text_field :thumb_image, id: :thumb_image
  .actions
    = f.submit